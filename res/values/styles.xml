<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="drawerArrowStyle">@style/Widget.AppCompat.DrawerArrowToggle</item>
    </style>

    <style name="Theme_Launcher_NoBlackScreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Normal_button" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">@drawable/item_selector</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Loading_widget" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <!-- <item name="android:textColor">@drawable/text_selector</item> -->
    </style>

    <style name="setting_preference_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/preference_bg</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="xListview" parent="@android:style/Widget.ListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="normal_button" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <!-- 设置未浮动窗口 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置无边框 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置无标题 -->
        <item name="android:windowBackground">@color/sc_transparent_background</item>
        <!-- 设置完全透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 设置屏幕变暗 -->
    </style>

    <style name="webview_progressbar" parent="@android:style/Widget">
        <item name="android:maxHeight">2dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_bar_layer_1</item>
        <item name="android:minHeight">2dip</item>
    </style>

    <style name="gray_text">
        <item name="android:textColor">#a9a9a9</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="progress_dialog" parent="@android:style/Theme.Dialog">

        <!-- 设置主题 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 设置未浮动窗口 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置无边框 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置无标题 -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置完全透明 -->
        <!-- 设置屏幕变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Base.Widget.AppCompat.DrawerArrowToggle" parent="">
        <item name="color">@android:color/white</item>
        <item name="thickness">2dp</item>
        <item name="barSize">18dp</item>
        <item name="gapBetweenBars">3dp</item>
        <item name="topBottomBarArrowSize">11.31dp</item>
        <item name="middleBarArrowSize">16dp</item>
        <item name="drawableSize">24dp</item>
        <item name="spinBars">true</item>
    </style>

    <style name="Widget.AppCompat.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="drawerArrowStyle">@style/Widget.AppCompat.DrawerArrowToggle</item>
    </style>

</resources>