<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:clickable="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="@dimen/dp30" >

        <TextView
            android:id="@+id/tv_title_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温馨提示："
            android:textSize="@dimen/sp16" />

        <TextView
            android:id="@+id/tv_content_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp40"
            android:text="你确定注销吗"
            android:textSize="@dimen/sp15" />

        <RelativeLayout
            android:id="@+id/button_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp50"
            android:paddingTop="@dimen/dp20" >

            <Button
                android:id="@+id/btn_cancel_logout"
                android:layout_width="@dimen/dp170"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp20"
                android:layout_toLeftOf="@+id/btn_ensure_logout"
                android:background="@drawable/md_btn_selector"
                android:text="取消"
                android:textColor="@color/titlebar_bg"
                android:textSize="@dimen/sp16" />

            <Button
                android:id="@+id/btn_ensure_logout"
                android:layout_width="@dimen/dp170"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="确认"
                android:background="@drawable/md_btn_selector"
                android:textColor="@color/titlebar_bg"
                android:textSize="@dimen/sp16" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>