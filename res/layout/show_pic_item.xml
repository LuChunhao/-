<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp14"
    android:background="@drawable/waterfall_shadow_selector" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         >

        <org.aurora.library.views.waterfall.PLA.alternative.widget.ScaleImageView
            android:id="@+id/iv_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/default_icon_bg" />

        <org.aurora.library.views.text.MarqueeTextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp80"
            android:layout_alignBottom="@+id/iv_show"
            android:alpha="0.5"
            android:marqueeRepeatLimit="marquee_forever"
            android:ellipsize="marquee"
            android:background="#000000"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#ffffff" />
    </RelativeLayout>

</RelativeLayout>