<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp20" >

        <ImageView
            android:id="@+id/item_grida_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_addpic_unfocused"
            android:scaleType="fitXY" >
        </ImageView>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_delete_image"
        android:layout_width="@dimen/dp40"
        android:layout_height="@dimen/dp40"
        android:layout_alignTop="@+id/rl_image"
        android:layout_alignRight="@+id/rl_image"
        android:scaleType="fitXY"
        android:src="@drawable/ic_delete_pic" />

</RelativeLayout>