<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_guess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp100"
        android:text="使用手指绘制图案，猜猜看能发现什么？"
        android:textColor="@color/titlebar_bg" />

    <cn.falconnect.shopping.widget.LocusPassWordView
        android:id="@+id/lpwv_find"
        android:layout_width="@dimen/dp535"
        android:layout_height="@dimen/dp535"
        android:layout_below="@+id/tv_guess"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp100" >
    </cn.falconnect.shopping.widget.LocusPassWordView>

</RelativeLayout>