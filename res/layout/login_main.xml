<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical" >
    <cn.falconnect.shopping.tabs.FragmentPagerTabGroup
        android:id="@+id/login_main_tabgroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         >

        <cn.falconnect.shopping.widget.IcsLinearLayout
            xmlns:ics="http://schemas.android.com/apk/res-auto"
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp72"
            android:orientation="horizontal"
            ics:divider_drawable="@drawable/custom_tab_indicator_divider"
            ics:divider_location="2"
            ics:divider_padding="@dimen/dp12" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="注册新用户"
                android:textColor="@drawable/tab_text_selector"
                android:textSize="@dimen/sp14"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="我要登录"
                android:textColor="@drawable/tab_text_selector"
                android:textSize="@dimen/sp14"
                android:textStyle="bold" />
        </cn.falconnect.shopping.widget.IcsLinearLayout>
    </cn.falconnect.shopping.tabs.FragmentPagerTabGroup>

</LinearLayout>
